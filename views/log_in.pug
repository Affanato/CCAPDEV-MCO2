extends layout.pug

block content
    .login-container
      .image-panel
      .form-panel
        h1 Welcome Back!
        p Please Login to your Laboratory Account
        form(method="POST", action="/login")
          .form-group
            input.form-control(type="email", placeholder="Email Address", required)
          .form-group
            input.form-control(type="password", placeholder="Password", required)
          .submit-fields.mt-3
            .buttn
              button.btn.main-btn(type="submit") Login
              p.signup.mt-2
                | Don't have an account?  
                a(href="/signup")   Sign up
